<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    android:layout_marginEnd="@dimen/margin_16dp"
    android:layout_marginStart="@dimen/margin_16dp"
    android:layout_marginTop="4dp"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_16dp"
            android:layout_marginRight="@dimen/margin_16dp"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:orientation="horizontal">

            <cn.xxyangyoulin.shiyue.widget.FontTextView
                android:id="@+id/tv_gongli"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2017/10/03"
                android:textColor="@android:color/black"
                android:textSize="12sp" />

            <cn.xxyangyoulin.shiyue.widget.FontTextView
                android:id="@+id/tv_nongli"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:gravity="center"
                android:text="农历八月十四"
                android:textColor="@android:color/black"
                android:textSize="12sp" />
        </LinearLayout>

        <cn.xxyangyoulin.shiyue.widget.FontTextView
            android:id="@+id/tv_poetry_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:paddingLeft="@dimen/margin_16dp"
            android:paddingRight="@dimen/margin_16dp"
            android:text="断章"
            android:textColor="@android:color/black"
            android:textSize="24sp"
            android:textStyle="bold" />

        <cn.xxyangyoulin.shiyue.widget.FontTextView
            android:id="@+id/tv_poetry"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:lineSpacingExtra="8dp"
            android:paddingLeft="@dimen/margin_16dp"
            android:paddingRight="@dimen/margin_16dp"
            android:text="你在楼上看风景\n看风景的人在楼上看你
\n明月装饰了你的窗\n你装饰了别人的梦\n你在楼上看风景\n看风景的人在楼上看你
\n明月装饰了你的窗\n你装饰了别人的梦\n明月装饰了你的窗\n你装饰了别人的梦"
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <LinearLayout
            android:id="@+id/layout_author"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="64dp"
            android:layout_marginRight="64dp"
            android:layout_marginTop="24dp"
            android:gravity="center"
            android:orientation="horizontal">

            <View
                android:layout_width="0dp"
                android:layout_height="2px"
                android:layout_weight="1"
                android:background="#ad9d6c" />

            <cn.xxyangyoulin.shiyue.widget.FontTextView
                android:id="@+id/tv_author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:fontFamily="cursive"
                android:gravity="center"
                android:text="baidu@小布吉岛"
                android:textSize="12sp" />
            <!--android:text="卞之琳"-->

            <View
                android:layout_width="0dp"
                android:layout_height="2px"
                android:layout_weight="1"
                android:background="#ad9d6c" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_16dp"
            android:layout_marginLeft="@dimen/margin_16dp"
            android:layout_marginRight="@dimen/margin_16dp"
            android:layout_marginTop="32dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/iv_collect"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:padding="4dp"
                android:src="@drawable/selector_ic_collect" />

            <cn.xxyangyoulin.shiyue.widget.FontTextView
                android:id="@+id/tv_collect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="-1dp"
                android:fontFamily="sans-serif-smallcaps"
                android:text="88"
                android:textColor="#444444"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/iv_praise"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginLeft="2dp"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:padding="4dp"
                android:src="@drawable/selector_ic_praise" />

            <cn.xxyangyoulin.shiyue.widget.FontTextView
                android:id="@+id/tv_praise"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="-1dp"
                android:fontFamily="sans-serif-smallcaps"
                android:gravity="center_vertical"
                android:text="123"
                android:textColor="#444444"
                android:textSize="12sp" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/iv_share"
                android:layout_width="@dimen/margin_24dp"
                android:layout_height="@dimen/margin_24dp"
                android:layout_marginLeft="8dp"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:padding="4dp"
                android:src="@drawable/ic_share_24dp" />

            <cn.xxyangyoulin.shiyue.widget.FontTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"

                android:textColor="@android:color/black"
                android:textSize="12sp" />
        </LinearLayout>


    </LinearLayout>

</android.support.v7.widget.CardView>
